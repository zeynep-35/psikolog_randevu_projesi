@model List<RandevuKayıt>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center">Randevular</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Sıra</th>
                <th>ID</th>
                <th>Psikolog Adı</th>
                <th>Başlangıç Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>Hasta Bilgileri</th>
                <th>Kullanıcı</th>
                <th>Hizmet</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                <tr>
                    <th scope="row">@((int)i + 1)</th> <!-- Sıralama numarası -->
                    <td>@item.Id</td>
                    <td>@item.psikolog_adi</td>
                    <td>@item.randevu_baslangic_tarihi</td>
                    <td>@item.randevu_bitis_tarihi</td>
                    <td>@item.hasta_bilgi</td>
                    <td>@item.KullaniciId</td>
                    <td>@item.Hizmet.hizmet_adi</td>
                    

                    <td>
                        <a href="/Admin/Update/@item.Id" class="btn btn-sm btn-warning">Güncelle</a>
                        <a href="/Admin/Delete/@item.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
